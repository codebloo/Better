{% comment %}
  CB: Ingredients Page
  - Modular bands (hero, content bands, checklist, CTA)
  - Uses gradient classes you can map in CSS (see cb-ingredients.css)
{% endcomment %}

<section class="cb-ingredients">
  {{ 'cb-ingredients.css' | asset_url | stylesheet_tag }}

  {% for block in section.blocks %}
    {% case block.type %}

      {% when 'hero' %}
        <section class="cb-band cb-hero {{ block.settings.bg_style }}">
          <div class="cb-container">
            {% if block.settings.kicker != blank %}
              <p class="cb-kicker">{{ block.settings.kicker }}</p>
            {% endif %}
            {% if block.settings.heading != blank %}
              <h1 class="cb-heading">{{ block.settings.heading }}</h1>
            {% endif %}
            {% if block.settings.subtext != blank %}
              <div class="cb-subtext rte">{{ block.settings.subtext }}</div>
            {% endif %}
          </div>
        </section>

      {% when 'band' %}
        <section class="cb-band {{ block.settings.bg_style }}">
          <div class="cb-container">
            {% if block.settings.heading != blank %}
              <h2 class="cb-band__title">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.tagline != blank %}
              <p class="cb-band__tagline">{{ block.settings.tagline }}</p>
            {% endif %}
            {% if block.settings.body != blank %}
              <div class="cb-band__body rte">{{ block.settings.body }}</div>
            {% endif %}
            {% if block.settings.claim != blank %}
              <p class="cb-claim">{{ block.settings.claim }}</p>
            {% endif %}
          </div>
        </section>

      {% when 'checklist' %}
        <section class="cb-band {{ block.settings.bg_style }}">
          <div class="cb-container">
            {% if block.settings.heading != blank %}
              <h2 class="cb-band__title">{{ block.settings.heading }}</h2>
            {% endif %}
            {% assign items = block.settings.items | split: newline %}
            <ul class="cb-checklist">
              {% for item in items %}
                {% assign clean = item | strip %}
                {% if clean != blank %}
                  <li class="cb-checklist__item">
                    <span aria-hidden="true" class="cb-checklist__icon">✕</span>
                    <span class="cb-checklist__text">{{ clean }}</span>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </section>

      {% when 'cta' %}
        <section class="cb-band cb-cta {{ block.settings.bg_style }}">
          <div class="cb-container">
            {% if block.settings.heading != blank %}
              <h2 class="cb-band__title">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.body != blank %}
              <div class="cb-band__body rte">{{ block.settings.body }}</div>
            {% endif %}
            {% if block.settings.btn_label != blank and block.settings.btn_link != blank %}
              <a class="cb-button" href="{{ block.settings.btn_link }}">{{ block.settings.btn_label }}</a>
            {% endif %}
          </div>
        </section>

    {% endcase %}
  {% endfor %}
</section>

