{% doc %}
  @prompt
    a responsive table with 3 columns, 4 rows + 1 header row
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-table-container-{{ ai_gen_id }} {
    width: 100%;
    overflow-x: auto;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.container_padding }}px;
    border-radius: {{ block.settings.container_border_radius }}px;
  }

  .ai-table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
  }

  .ai-table-{{ ai_gen_id }} th {
    background-color: {{ block.settings.header_bg_color }};
    color: {{ block.settings.header_text_color }};
    font-weight: 600;
    text-align: {{ block.settings.header_alignment }};
    padding: {{ block.settings.cell_padding }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    font-size: {{ block.settings.header_font_size }}px;
  }

  .ai-table-{{ ai_gen_id }} td {
    background-color: {{ block.settings.cell_bg_color }};
    color: {{ block.settings.cell_text_color }};
    text-align: {{ block.settings.cell_alignment }};
    padding: {{ block.settings.cell_padding }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    font-size: {{ block.settings.cell_font_size }}px;
  }

  .ai-table-{{ ai_gen_id }} tbody tr:nth-child(even) td {
    {% if block.settings.striped_rows %}
      background-color: {{ block.settings.stripe_bg_color }};
    {% endif %}
  }

  .ai-table-{{ ai_gen_id }} tbody tr:hover td {
    {% if block.settings.hover_effect %}
      background-color: {{ block.settings.hover_bg_color }};
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-table-{{ ai_gen_id }} {
      font-size: {{ block.settings.cell_font_size | times: 0.9 }}px;
    }

    .ai-table-{{ ai_gen_id }} th {
      font-size: {{ block.settings.header_font_size | times: 0.9 }}px;
      padding: {{ block.settings.cell_padding | times: 0.8 }}px;
    }

    .ai-table-{{ ai_gen_id }} td {
      padding: {{ block.settings.cell_padding | times: 0.8 }}px;
    }

    .ai-table-container-{{ ai_gen_id }} {
      padding: {{ block.settings.container_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-table-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <table class="ai-table-{{ ai_gen_id }}">
    <thead>
      <tr>
        <th>{{ block.settings.header_col_1 }}</th>
        <th>{{ block.settings.header_col_2 }}</th>
        <th>{{ block.settings.header_col_3 }}</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{ block.settings.row_1_col_1 }}</td>
        <td>{{ block.settings.row_1_col_2 }}</td>
        <td>{{ block.settings.row_1_col_3 }}</td>
      </tr>
      <tr>
        <td>{{ block.settings.row_2_col_1 }}</td>
        <td>{{ block.settings.row_2_col_2 }}</td>
        <td>{{ block.settings.row_2_col_3 }}</td>
      </tr>
      <tr>
        <td>{{ block.settings.row_3_col_1 }}</td>
        <td>{{ block.settings.row_3_col_2 }}</td>
        <td>{{ block.settings.row_3_col_3 }}</td>
      </tr>
      <tr>
        <td>{{ block.settings.row_4_col_1 }}</td>
        <td>{{ block.settings.row_4_col_2 }}</td>
        <td>{{ block.settings.row_4_col_3 }}</td>
      </tr>
    </tbody>
  </table>
</div>

